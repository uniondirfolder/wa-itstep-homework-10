@model IEnumerable<wa_itstep_homework_10.Models.Participant>
@{ 
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List Participants</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous" />
</head>
<body>
    <div class="panel-body">
        <h2>List of conference participants:</h2>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Is speaker</th>
                </tr>
            </thead>
            <tbody>
                @foreach (wa_itstep_homework_10.Models.Participant p in Model)
                {
                    <tr>
                        <td>@p.Name</td>
                        <td>@p.Email</td>
                        <td>@p.Sreaker == true ? "Yes" : "No"</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    

</body>
</html>